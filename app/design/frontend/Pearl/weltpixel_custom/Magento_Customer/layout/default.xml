<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="top.links">
            <block class="Magento\Framework\View\Element\Html\Link" name="add-orderbysku-header-link-custom" ifconfig="orderbysku/general/enable">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Quick Order</argument>
                    <argument name="sortOrder" xsi:type="number">70</argument>
                    <argument name="path" xsi:type="string">orderbysku/index/index</argument>
                    <argument name="class" xsi:type="string">quickorder</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="add-orderbysku-header-link" remove="true"/>
    </body>
</page>